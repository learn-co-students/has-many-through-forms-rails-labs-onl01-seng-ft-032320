
<%= form_for (@post) do |f| %>

<p>
<%= f.label :title %>
<%= f.text_field :title %>
</p>

<p>
<%= f.label :content %>
<%= f.text_area :content %>
</p>

<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
# uses :id as value for the checkbox, uses :name method as label for the checkbox

<%= f.fields_for :categories, @post.categories.build do |c| %>
<%= c.text_field :name %>
<% end %>

<%= f.submit %>
<% end %>